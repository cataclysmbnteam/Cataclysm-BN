        "CATA_CLANG_TIDY_PLUGIN": "ON",
        "BACKTRACE": "ON",
        "LIBBACKTRACE": "ON",
        "LINKER": "mold",
        "USE_XDG_DIR": "ON",
        "USE_HOME_DIR": "OFF",
        "USE_PREFIX_DATA_DIR": "OFF",
        "USE_TRACY": "ON",
        "TRACY_VERSION": "master",
        "TRACY_ON_DEMAND": "ON",
        "TRACY_ONLY_IPV4": "ON"
